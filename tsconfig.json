{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
